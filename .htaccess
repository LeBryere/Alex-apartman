<IfModule mod_headers.c>
  Header set Connection keep-alive
  # 1 hetes tárazás
  <FilesMatch ".(css|js)$">
    Header set Cache-Control "max-age=604800, public"
  </FilesMatch>
  # 1 hónapos tárazás
  <FilesMatch ".(jpg|jpeg|png|gif|swf|ico|pdf|flv)$">
    Header set Cache-Control "max-age=2592000, public"
  </FilesMatch>
</IfModule>

<IfModule mod_http2.c>
  # Engedélyezi a HTTP/2-t a kiszolgáló számára
  Protocols h2 http/1.1
</IfModule>

# Engedélyezzük a .htaccess használatát
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Az HTTPS használatának ellenőrzése és átirányítás
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # A HTTP hivatkozások ellenőrzése és tilalma a képekhez (opcionális)
  RewriteCond %{HTTP_REFERER} !^$
  RewriteCond %{HTTP_REFERER} !^http(s)?://(www\.)?lebryere\.com [NC]
  RewriteRule \.(jpg|jpeg|png|gif)$ - [NC,F,L]

  # A webhely gyökérkönyvtárának megvédése
  Options -Indexes

  # Megtiltjuk a kiválasztott fájlok közvetlen hozzáférhetőségét
  <FilesMatch "\.(htaccess|htpasswd|php|log|ini|xml|json|config|sh|inc|bak|swp|sql|cgi|tpl)$">
    Order Allow,Deny
    Deny from all
  </FilesMatch>

  # Tömörítés engedélyezése (opcionális)
  <IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/x-javascript application/json application/xml
  </IfModule>

  # Caching beállítások példa
  <IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 week"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
  </IfModule>

  # Biztonsági fejlécek példa (opcionális)
  <IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
  </IfModule>
</IfModule>
